local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "All-In-One Hub",
   LoadingTitle = "Đang khởi tạo...",
   LoadingSubtitle = "by MIXI",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "GeminiHubConfig",
      FileName = "MainConfig"
   },
   Discord = {
      Enabled = false,
      Invite = "",
      RememberJoins = true
   },
   KeySystem = false,
})

--- [ TABS ] ---
-- Gộp tất cả vào 1 Tab chính
local MainTab = Window:CreateTab("Main Menu", 4483362458)

--- [ PHẦN TECH & COMBAT ] ---
MainTab:CreateSection("Tech & Combat")

MainTab:CreateButton({
   Name = "Emote Dash",
   Callback = function()
       getgenv().EmoteDashButton = true
       getgenv().M1ResetMethod = 1
       loadstring(game:HttpGet("https://raw.githubusercontent.com/Cyborg883/M1Reset/refs/heads/main/Protected_7911467234955743.lua"))()
   end,
})

